# ==============================
# Base URL
# ==============================
@BASE_URL = http://localhost:3000

### 
# GET /api/ikamah - Success
GET {{BASE_URL}}/api/ikamah
Accept: application/json

### 
# GET /api/ikamah/time - Success 24h format
GET {{BASE_URL}}/api/ikamah/time?format=24h
Accept: application/json

### 
# GET /api/ikamah/time - Success 12h format
GET {{BASE_URL}}/api/ikamah/time?format=12h
Accept: application/json

### 
# GET /api/ikamah/time - Failure: invalid format
GET {{BASE_URL}}/api/ikamah/time?format=invalid
Accept: application/json

### 
# PUT /api/ikamah - Success (update some values)
PUT {{BASE_URL}}/api/ikamah
Content-Type: application/json

{
  "fajr": 28,
  "jummah": 10,
  "dhuhr": 15,
  "asr": 15,
  "maghrib": 10,
  "isha": 20
}

### 
# PUT /api/ikamah - Failure: empty body (nothing to update)
PUT {{BASE_URL}}/api/ikamah
Content-Type: application/json

{}

### 
# PUT /api/ikamah - Failure: invalid value (over 60)
PUT {{BASE_URL}}/api/ikamah
Content-Type: application/json

{
  "fajr": 70
}

### 
# PUT /api/ikamah - Failure: invalid type
PUT {{BASE_URL}}/api/ikamah
Content-Type: application/json

{
  "asr": "fifteen"
}

### 
# GET /api/ikamah - After update, check current values
GET {{BASE_URL}}/api/ikamah
Accept: application/json

### 
# GET /api/ikamah/time - Check calculation after update
GET {{BASE_URL}}/api/ikamah/time?format=24h&lang=en
Accept: application/json
