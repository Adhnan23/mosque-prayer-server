# ==============================
# Base URL
# ==============================
@BASE_URL = http://localhost:3000

### 
# GET /api/ramadan - Success 24h format
GET {{BASE_URL}}/api/ramadan?format=24h
Accept: application/json

### 
# GET /api/ramadan - Success 12h format
GET {{BASE_URL}}/api/ramadan?format=12h
Accept: application/json

### 
# GET /api/ramadan - Failure: invalid format
GET {{BASE_URL}}/api/ramadan?format=invalid
Accept: application/json

### 
# PUT /api/ramadan - Success (update some times)
PUT {{BASE_URL}}/api/ramadan
Content-Type: application/json

{
  "suhur": "04:30",
  "sunset": "18:45",
  "taraweeh": "20:30"
}

### 
# PUT /api/ramadan - Failure: empty body (nothing to update)
PUT {{BASE_URL}}/api/ramadan
Content-Type: application/json

{}

### 
# PUT /api/ramadan - Failure: invalid time format
PUT {{BASE_URL}}/api/ramadan
Content-Type: application/json

{
  "suhur": "25:99"
}

### 
# PUT /api/ramadan - Failure: invalid type
PUT {{BASE_URL}}/api/ramadan
Content-Type: application/json

{
  "taraweeh": 2030
}

### 
# GET /api/ramadan - After update, check current values (24h)
GET {{BASE_URL}}/api/ramadan?format=24h
Accept: application/json

### 
# GET /api/ramadan - After update, check current values (12h)
GET {{BASE_URL}}/api/ramadan?format=12h
Accept: application/json
