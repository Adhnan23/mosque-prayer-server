# ==============================
# Base URL
# ==============================
@BASE_URL = http://localhost:3000

# ==============================
# GET ALL
# ==============================

### GET /api/prayer-time (default format = 24h)
GET {{BASE_URL}}/api/prayer-time
Accept: application/json

### GET /api/prayer-time (12h format)
GET {{BASE_URL}}/api/prayer-time?format=12h
Accept: application/json

### GET /api/prayer-time (limit + 24h)
GET {{BASE_URL}}/api/prayer-time?limit=5&format=24h
Accept: application/json

### GET /api/prayer-time (invalid format → fail)
GET {{BASE_URL}}/api/prayer-time?format=abc
Accept: application/json


# ==============================
# GET MONTHLY
# ==============================

### GET /api/prayer-time/:month (24h)
GET {{BASE_URL}}/api/prayer-time/12?format=24h
Accept: application/json

### GET /api/prayer-time/:month (12h + limit)
GET {{BASE_URL}}/api/prayer-time/12?limit=10&format=12h
Accept: application/json

### GET /api/prayer-time/:month (invalid month → fail)
GET {{BASE_URL}}/api/prayer-time/13?format=24h
Accept: application/json


# ==============================
# GET BY DAY
# ==============================

### GET /api/prayer-time/:month/:day (24h)
GET {{BASE_URL}}/api/prayer-time/12/30?format=24h
Accept: application/json

### GET /api/prayer-time/:month/:day (12h)
GET {{BASE_URL}}/api/prayer-time/12/30?format=12h
Accept: application/json

### GET /api/prayer-time/:month/:day (invalid day → fail)
GET {{BASE_URL}}/api/prayer-time/12/99?format=24h
Accept: application/json


# ==============================
# GET RANGE
# ==============================

### GET /api/prayer-time/range (24h)
GET {{BASE_URL}}/api/prayer-time/range/12/28/12/31?format=24h
Accept: application/json

### GET /api/prayer-time/range (12h)
GET {{BASE_URL}}/api/prayer-time/range/12/28/12/31?format=12h
Accept: application/json

### GET /api/prayer-time/range (invalid range → fail)
GET {{BASE_URL}}/api/prayer-time/range/12/31/12/28?format=24h
Accept: application/json


# ==============================
# GET TODAY
# ==============================

### GET /api/prayer-time/today (24h)
GET {{BASE_URL}}/api/prayer-time/today?format=24h
Accept: application/json

### GET /api/prayer-time/today (12h)
GET {{BASE_URL}}/api/prayer-time/today?format=12h
Accept: application/json

### GET /api/prayer-time/today (invalid format → fail)
GET {{BASE_URL}}/api/prayer-time/today?format=xyz
Accept: application/json


# ==============================
# UPDATE SINGLE DAY
# ==============================

### PUT /api/prayer-time/:month/:day (success)
PUT {{BASE_URL}}/api/prayer-time/12/30
Content-Type: application/json

{
  "fajr": "04:30",
  "sunrise": "06:10",
  "dhuhr": "12:15",
  "asr": "15:30",
  "maghrib": "18:45",
  "isha": "20:00"
}

### PUT /api/prayer-time/:month/:day (partial update)
PUT {{BASE_URL}}/api/prayer-time/12/30
Content-Type: application/json

{
  "isha": "20:10"
}

### PUT /api/prayer-time/:month/:day (invalid time → fail)
PUT {{BASE_URL}}/api/prayer-time/12/30
Content-Type: application/json

{
  "fajr": "25:90"
}

### PUT /api/prayer-time/:month/:day (non-existing date → fail)
PUT {{BASE_URL}}/api/prayer-time/12/99
Content-Type: application/json

{
  "fajr": "04:40"
}


# ==============================
# UPDATE RANGE
# ==============================

### PUT /api/prayer-time/range (success)
PUT {{BASE_URL}}/api/prayer-time/range/12/28/12/31
Content-Type: application/json

{
  "fajr": "04:35",
  "isha": "20:05"
}

### PUT /api/prayer-time/range (invalid range → fail)
PUT {{BASE_URL}}/api/prayer-time/range/12/31/12/28
Content-Type: application/json

{
  "fajr": "04:35"
}

### PUT /api/prayer-time/range (empty body → fail)
PUT {{BASE_URL}}/api/prayer-time/range/12/28/12/31
Content-Type: application/json

{}
