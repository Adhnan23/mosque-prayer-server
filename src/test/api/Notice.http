# ==============================
# Base URL
# ==============================
@BASE_URL = http://localhost:3000

### 
# GET /api/notice - Get all notices (Success)
GET {{BASE_URL}}/api/notice
Accept: application/json

### 
# GET /api/notice - Filter active notices
GET {{BASE_URL}}/api/notice?isActive=true
Accept: application/json

### 
# GET /api/notice/:id - Success (assuming ID 1 exists)
GET {{BASE_URL}}/api/notice/1
Accept: application/json

### 
# GET /api/notice/:id - Failure: non-existing ID
GET {{BASE_URL}}/api/notice/9999
Accept: application/json

### 
# POST /api/notice - Success: insert new notice (active today)
POST {{BASE_URL}}/api/notice
Content-Type: application/json

{
  "noticeContent": "Test Notice Today",
  "startDate": "2025-12-30",
  "endDate": "2025-12-30"
}

### 
# POST /api/notice - Success: insert new notice (future dates, inactive)
POST {{BASE_URL}}/api/notice
Content-Type: application/json

{
  "noticeContent": "Future Notice",
  "startDate": "2025-12-31",
  "endDate": "2026-01-01"
}

### 
# POST /api/notice - Failure: missing required field
POST {{BASE_URL}}/api/notice
Content-Type: application/json

{
  "startDate": "2025-12-30",
  "endDate": "2025-12-30"
}

### 
# PUT /api/notice/:id - Success: update existing notice (ID 1)
PUT {{BASE_URL}}/api/notice/1
Content-Type: application/json

{
  "noticeContent": "Updated Test Notice",
  "endDate": "2025-12-31"
}

### 
# PUT /api/notice/:id - Failure: non-existing ID
PUT {{BASE_URL}}/api/notice/9999
Content-Type: application/json

{
  "noticeContent": "Should Fail"
}

### 
# DELETE /api/notice/:id - Success (delete notice ID 1)
DELETE {{BASE_URL}}/api/notice/1
Accept: application/json

### 
# DELETE /api/notice/:id - Failure: non-existing ID
DELETE {{BASE_URL}}/api/notice/9999
Accept: application/json

### 
# GET /api/notice - Verify notices after insert/update/delete
GET {{BASE_URL}}/api/notice
Accept: application/json
